<% layout("layouts/boilerplate.ejs")%>

<body>
    <div class="viewnote">
    <div class="note-title mb-2"><h2>Title:<%= note.title.toUpperCase()%></h2></div>
    <div class="note-date"><i>at:<%=note.date.toDateString()%></div></i>
    <hr>
    <div class="note-content"><%=note.content%></div>
    <a href="/notes/edit/<%= note._id%>" class="btn btn-secondary col-2 offset-3 mt-4 edit-btn">EditNote</a>
    <form method="post" action="/notes/delete/<%= note._id%>?_method=DELETE">
        <button class="btn btn-dark deletebtn">DeleteNote</button>
    </form>
</div>
</body>