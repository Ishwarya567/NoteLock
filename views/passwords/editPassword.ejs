<% layout("layouts/boilerplate.ejs")%>
<body>
    <div class="row mt-4">
        <h1 class="col-4 offset-5 mb-4">Password</h1>
        <div class="col-6 offset-3">
            <form method="POST" action="/passwords/edit/<%= password._id%>"  class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label"><b>Title</b></label>
                    <input name="title"  id="title"   type="text" class="form-control" required value="<%= password.title%>">
                    </div>
                <div class="mb-3">
                <label for="site" class="form-label"><b>site</b></label>
                <input name="site"  id="site"   type="url" class="form-control" required value="<%= password.site%>">
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label"><b>username</b></label>
                    <input name="username"  id="username"   type="username" class="form-control" required value="<%= password.username%>">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label"><b>password</b></label>
                        <input name="password"  id="site"   type="password" class="form-control" required placeholder="enter new password">
                        </div>

                    <button class="btn btn-success mt-3 mb-3">Edit Password</button>
          </form>
        </div>
    </div>